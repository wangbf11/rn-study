<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="divider"/>
    <style name="horizontal_dialog_divider" parent="horizontal_divider">
        <item name="android:background">@color/dialog_divider_bg</item>
    </style>
    <style name="horizontal_divider" parent="divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
    </style>
    <style name="vertical_dialog_divider" parent="vertical_divider">
        <item name="android:background">@color/dialog_divider_bg</item>
    </style>
    <style name="vertical_divider" parent="divider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
</resources>
