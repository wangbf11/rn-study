<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/task_backgroundcolor"
	android:orientation="vertical">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="70dp"
		android:gravity="center"
		android:padding="10sp"
		android:orientation="horizontal"
		android:background="@drawable/shape_item_bg"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5sp">
		<ImageView
			android:id="@+id/task_image"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:src="@drawable/zhifubao"/>
		<LinearLayout
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_marginLeft="20sp"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:orientation="vertical">
			<TextView
				android:id="@+id/task_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#202020"
				android:textSize="16sp"
				android:text="这是任务名称"/>
			<FrameLayout
				android:layout_width="match_parent"
				android:layout_weight="1"
				android:layout_height="0dp"/>
			<TextView
				android:id="@+id/task_count"
				android:textColor="#808080"
				android:textSize="14sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="剩余1245份"/>
		</LinearLayout>

		<TextView
			android:id="@+id/task_money"
			android:layout_marginLeft="10dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#F64932"
			android:textSize="15sp"
			android:text="+1.2元"/>
	</LinearLayout>
</LinearLayout>